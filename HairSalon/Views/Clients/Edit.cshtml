@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<div class="row">
  <div class="well">
    <h2>Edit Client Details</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title">
          <strong>Editing @Html.DisplayFor(model => model.Name)</strong>
        </div>
      </div>
      <div class="panel-body">
        @using (Html.BeginForm())
        {
          @Html.HiddenFor(model => model.ClientId)
          @Html.LabelFor(model => model.Name)<br>
          @Html.EditorFor(model => model.Name, new { @class = "form-control" })<br>

          @Html.LabelFor(model => model.Description)<br>
          @Html.EditorFor(model => model.Description, new { @class = "form-control" })<br>

          @Html.LabelFor(model => model.Stylist)<br>
          @Html.DropDownList("StylistId")<br>
          <input type="submit" value="Save" class="btn btn-primary">
        }
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title">
          <strong>Menu</strong>
        </div>
      </div>
      <div class="panel-body  menu">
        <a href='@Url.Action("Details", new {id = @Model.StylistId })'>
          <button class="btn btn-primary">
            View @Model.Name
          </button>
        </a>
        <a href='@Url.Action("Index")'>
          <button class="btn btn-primary">
            View Stylists
          </button>
        </a>
        <br>
        <a href='@Url.Action("Index", "Home")'>
          <button class="btn btn-success">
            Back Home
          </button>
        </a>
      </div>
  </div>
</div>