@{
  Layout = "_Layout";
}

@using HairSalon.Models

<div class="row">
  <div class="well">
    <h2>Stylists</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    @if(Model.Count == 0)
    {
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="panel-title">
            <strong>No Results</strong>
          </div>
        </div>
        <div class="panel-body">
          <p>You do not have any stylists at this time.</p>
        </div>
      </div>
    }
    
    @foreach(Stylist stylist in Model)
    {
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="panel-title">
            <strong>@stylist.Name</strong>
          </div>
        </div>
        <div class="panel-body">
          <strong>Total Clients: @stylist.Clients.Count</strong>
          <hr>
        <a href='@Url.Action("Details", new { id = @stylist.StylistId })'>
          <button class="btn btn-primary">
            View Clients
          </button>
        </a>
        <a href='@Url.Action("Edit", new { id = @stylist.StylistId })'>
          <button class="btn btn-success">
            Edit @stylist.Name
          </button>
        </a>
        </div>
      </div>
    }
  </div>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title">
          <strong>Menu</strong>
        </div>
      </div>
      <div class="panel-body  menu">
        <a href='@Url.Action("Create")'>
          <button class="btn btn-primary">
            Add Stylist
          </button>
        </a>
        <br>
        <a href='@Url.Action("Index", "Home")'>
          <button class="btn btn-success">
            Back Home
          </button>
        </a>
      </div>
  </div>
</div>