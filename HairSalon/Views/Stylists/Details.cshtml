@{
  Layout = "_Layout";
}
@using HairSalon.Models
@model HairSalon.Models.Stylist

<div class="row">
  <div class="well">
    <h2>Stylist Details</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title">
          <strong>@Model.Name</strong> | Employee ID @Model.StylistId
        </div>
      </div>   
      <div class="panel-body">
        @if(@Model.Clients.Count == 0)
        {
          <p>@Model.Name has no current clients.</p>
        }
        else
        {
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Description</th>
            </tr>
            @foreach(Client client in @Model.Clients)
            {
              <tr>
                <td>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</td>
                <td>@client.Description</td>
              </tr>
            }
          </table>
        }
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title">
          <strong>Menu</strong>
        </div>
      </div>
      <div class="panel-body  menu">
        <a href='@Url.Action("Create", "Clients")'>
          <button class="btn btn-primary">
            Add Client
          </button>
        </a>
        <br>
        <a href='@Url.Action("Index")'>
          <button class="btn btn-primary">
            View Stylists
          </button>
        </a>
        <br>
        <a href='@Url.Action("Edit", new { id = @Model.StylistId})'>
          <button class="btn btn-success">
            Edit @Model.Name
          </button>
        </a>
        <br>
        <a href='@Url.Action("Index", "Home")'>
          <button class="btn btn-success">
            Back Home
          </button>
        </a>
      </div>
  </div>
</div>